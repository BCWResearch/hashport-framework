{
    "compilerOptions": {
        "baseUrl": "src",
        "strict": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "exclude": ["./examples/**/*", "./dist/**/*"]
}
